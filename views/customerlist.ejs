<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-8">
                <h4 class="font-weight-bold">All Users</h4>
            </div>
            <div class="col-4">
                <a href="/addCustomer" class="btn btn-success float-right"><i class="fa fa-plus mr-1"></i>Add New User</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Corporate ID</th>
                    <th scope="col">Account Number</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if(customers.length > 0) { %>
                    <% for(let customer of customers) { %>
                        <tr>
                            <th scope="col">
                                <%= customer.name %>
                            </th>
                            <td>
                                <%= customer.idcust %>
                            </td>
                            <td>
                                <%= customer.number %>
                            </td>

                            <td>
                                <a href="/updateCustomer/<%= customer._id %>" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i>Update</a>
                                <a href="/deleteCustomer/<%= customer._id %>" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i>Delete</a>
                            </td>
                        </tr>
                        <% } %>
                            <% } else { %>
                                <tr>
                                    <td>User Data Not Found</td>
                                </tr>
                                <% } %>
            </tbody>
        </table>
    </div>
</div>